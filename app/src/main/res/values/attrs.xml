<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text" format="string" />
    <attr name="textLeft" format="string" />
    <attr name="textRight" format="string" />
    <attr name="hint" format="string" />
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="icon" format="reference" />

    <declare-styleable name="TabView">
        <attr name="selected" format="boolean" />
        <attr name="text" />
        <attr name="icon" />
        <attr name="textColor" />
    </declare-styleable>

    <declare-styleable name="ClearEditView">
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="hint" />
        <attr name="icon" />
        <attr name="maxLength" format="integer" />
        <attr name="inputType">
            <enum name="text" value="1" />
            <enum name="number" value="2" />
            <enum name="password" value="128" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="height_width" format="float" />
    </declare-styleable>

    <declare-styleable name="SquareRelativityLayout">
        <attr name="spec">
            <enum name="h_w" value="1" />
            <enum name="w_h" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension" />
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

</resources>